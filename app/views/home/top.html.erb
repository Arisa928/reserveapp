
<header>        
<%= render "shared/header" %>
</header>

<div class="main top-main">
  <div class="top-message">
    <h1><span>Potepan Shareで</span>
        <span>まだ体験したことのない</span>
        <span>旅をしよう</span></h1>
  </div>
  
  <div class = "serch">
    <%= search_form_for @q, url: index_path do |f| %>
      <%= f.label :name_or_address_or_detail_cont, 'キーワード' %>
      <%= f.search_field :name_or_address_cont %>
      <br>
      <%= f.submit '検索' %>
    <% end %>
  </div>
  
  <div class="link_serch">
    <h2 class="">おすすめのエリア</h2>
    <div class="form-inline">
      <%= link_to ({controller: "rooms", action: "index",q:{address_cont:"東京"}}) do%>
        <p class="link_tab tokyo" >東京</p>
      <% end %>
    </div>
    <div class="form-inline">
      <%= link_to ({controller: "rooms", action: "index",q:{address_cont:"大阪"}}) do%>
        <p class="link_tab">大阪</p>
      <% end %>
    </div>
    <div class="form-inline">
      <%= link_to ({controller: "rooms", action: "index",q:{address_cont:"京都"}}) do%>
        <p class="link_tab  kyoto">京都</p>
      <% end %>
    </div>
    <div class="form-inline">
      <%= link_to ({controller: "rooms", action: "index",q:{address_cont:"札幌"}}) do%>
        <p class="link_tab">札幌</p>
      <% end %>
    </div>
  </div>
</div>
  
  